{
  "name": "chrome-bookmark-list",
  "version": "1.3.0",
  "description": "Chrome extension for displaying bookmarks in a folder-based list",
  "scripts": {
    "build": "tsc",
    "build:extension": "./build.sh",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.0",
    "happy-dom": "^14.12.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "private": true
}
