{
  "name": "chrome-bookmark-list",
  "version": "2.0.1",
  "description": "Chrome extension for displaying bookmarks in a folder-based list with history search",
  "scripts": {
    "build": "tsc",
    "build:extension": "./build.sh",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/chrome": "^0.1.11",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "happy-dom": "^20.0.10",
    "jsdom": "^26.1.0",
    "typescript": "^5.4.5",
    "vitest": "^3.2.2"
  },
  "private": true
}
